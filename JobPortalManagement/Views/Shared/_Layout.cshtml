                        </div>
                    </div>

                    <div class="footer-bottom">
                        <div class="row align-items-center">
                            <div class="col-md-6 text-md-start text-center">
                                <p>&copy; 2025 JobPortal Pro. All rights reserved.</p>
                            </div>
                            <div class="col-md-6 text-md-end text-center">
                                <p>Made with <i class="fas fa-heart text-danger"></i> by <a href="#">Your Company</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        // Sidebar collapse toggle for desktop and mobile
        function toggleSidebarCollapse() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
        }

        // Sidebar toggle for mobile (full show/hide)
        function toggleSidebarMobile() {
            const sidebar = document.getElementById('sidebar');
            if (!sidebar.classList.contains('collapsed')) {
                sidebar.classList.toggle('active');
            }
        }

        // Menu toggle animation
        function toggleMenu(element) {
            const toggle = element.querySelector('.menu-toggle');
            toggle.classList.toggle('rotated');
        }

        // User menu toggle (placeholder)
        function toggleUserMenu() {
            console.log('User menu clicked');
        }

        // Active menu highlighting
        $(document).ready(function () {
            // Highlight active menu item
            const currentPath = window.location.pathname;
            $('.menu-link, .submenu-link').each(function () {
                const href = $(this).attr('href');
                if (href && href !== '#' && href === currentPath) {
                    $(this).addClass('active');
                    // Expand all parent menus
                    let parentCollapse = $(this).closest('.collapse');
                    while (parentCollapse.length) {
                        parentCollapse.addClass('show');
                        const parentToggle = $(`[data-bs-target="#${parentCollapse.attr('id')}"] .menu-toggle`);
                        parentToggle.addClass('rotated');
                        parentCollapse = parentCollapse.closest('.submenu').closest('.collapse');
                    }
                }
            });

            // Handle collapse events
            $('.collapse').on('show.bs.collapse', function () {
                $(this).addClass('slide-down');
            });

            $('.collapse').on('hide.bs.collapse', function () {
                $(this).removeClass('slide-down');
            });

            // Close sidebar when clicking outside on mobile
            $(document).click(function (event) {
                if ($(window).width() <= 768) {
                    const sidebar = $('#sidebar');
                    const sidebarToggle = $('.sidebar-toggle');
                    const sidebarToggleBtn = $('.sidebar-toggle-btn');

                    if (!sidebar.is(event.target) && sidebar.has(event.target).length === 0 &&
                        !sidebarToggle.is(event.target) && sidebarToggle.has(event.target).length === 0 &&
                        !sidebarToggleBtn.is(event.target) && sidebarToggleBtn.has(event.target).length === 0) {
                        sidebar.removeClass('active');
                    }
                }
            });

            // Handle window resize
            $(window).resize(function () {
                if ($(window).width() > 768) {
                    $('#sidebar').removeClass('active');
                }
            });

            // Smooth scrolling for valid anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                const href = anchor.getAttribute('href');
                if (href && href !== '#') {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(href);
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
