@model List<JobPortalManagement.Models.FormField>


<!DOCTYPE html>
<html>
<head>
    <title>Manage Registration Form Fields</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card { max-width: 800px; margin: 20px auto; }
        .form-label { font-weight: bold; }
        .field-list { list-style: none; padding: 0; }
        .field-list li { padding: 10px 0; border-bottom: 1px solid #dee2e6; }
        .options-input { display: none; }
    </style>
</head>
<body>
    <div class="container">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Manage Registration Form Fields</h2>
            </div>
            <div class="card-body">
                <form asp-action="AddField" method="post" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Field Name</label>
                        <input name="name" class="form-control" placeholder="e.g., FirstName" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Field Type</label>
                        <select name="type" class="form-select" onchange="toggleOptionsInput(this)">
                            <option value="text">Text</option>
                            <option value="email">Email</option>
                            <option value="date">Date</option>
                            <option value="checkbox">Checkbox</option>
                            <option value="dropdown">Dropdown</option>
                            <option value="textarea">Textarea</option>
                            <option value="radio">Radio</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Required</label>
                        <div class="form-check">
                            <input type="checkbox" name="isRequired" class="form-check-input" />
                            <label class="form-check-label">Is Required</label>
                        </div>
                    </div>
                    <div class="col-12 options-input">
                        <label class="form-label">Options (comma-separated, for dropdown/radio)</label>
                        <input name="options" class="form-control" placeholder="e.g., Option1, Option2, Option3" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Add Field</button>
                    </div>
                </form>

                <h4 class="mt-4">Existing Fields</h4>
                <ul class="field-list">
                    @foreach (var field in Model)
                    {
                        <li class="d-flex justify-content-between align-items-center">
                            <span>@field.Name (@field.Type, Required: @field.IsRequired) @(field.Options != null ? " - Options: " + field.Options : "")</span>
                            <form asp-action="RemoveField" method="post" onsubmit="return confirm('Deleting this field will permanently remove the column and its data. Continue?');">
                                <input type="hidden" name="id" value="@field.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <script>
        function toggleOptionsInput(select) {
            const optionsInput = document.querySelector('.options-input');
            if (select.value === 'dropdown' || select.value === 'radio') {
                optionsInput.style.display = 'block';
            } else {
                optionsInput.style.display = 'none';
            }
        }
        document.addEventListener('DOMContentLoaded', () => {
            const select = document.querySelector('select[name="type"]');
            toggleOptionsInput(select);
        });
    </script>
</body>
</html>